<script>
    const starInput = document.querySelectorAll('.rating__input');
    
    const rating =  <%- rating %>;
    starInput.forEach(input => {
        if ( input.value == rating ) {
            input.setAttribute('checked', '');
        } else if (input.value !== rating) {
             input.removeAttribute('checked');
        }
    })
</script>