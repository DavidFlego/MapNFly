<% layout('layouts/boilerplate') %>

<div class="card__header card__header--onshow">
    <h1 class="card__title">Login</h1>
</div>

<div class="form-container">
    <form class="form login__form" action="/login" method="POST">

        <div class="form-group">
            <div class="form-user">
                <label class="form__label" for="loginUsername">Username</label>
                <input class="form__input" type="username" id="loginUsername" name="username" required />
            </div>
        </div>

        <div class="form-group">
            <div class="form-password">
                <label class="form__label" for="loginPassword">Password</label>
                <input class="form__input" type="password" id="loginPassword" name="password" required />
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-submit">Log In</button>
        </div>
        
    </form>
</div>